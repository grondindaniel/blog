{% include 'admin_template.twig' %}
{% block content %}
    <div class="valideUser">
    {% if role == 1 %}
        <form  method="POST" action="../Users/validateUsers">
            {% if msg == 'ok' %}
                <div class="alert alert-success">
                    <strong>Utilisateurs validés avec succés</strong>.
                </div>
            {% endif %}
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Prénom</th>
            <th>Nom </th>
            <th>Email</th>
            <th>Valider</th>
        </tr>
        </thead>
        <tbody>
            {% for user in list %}
            <tr>
                <td>{{ user.firstname }}   </td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <div class="checkbox">
                        <input type="checkbox" value="{{ user.id }}" name="tab[]">
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <input type="submit" name="submit" class="btn btn-primary" value="Envoyer">
        </form>
        </div>
    {% else %}
        <div class="alert alert-info">
            <strong>Merci de vous connecter </strong>
        </div>
    {% endif %}
    {% include 'footer.twig' %}
{% endblock %}
