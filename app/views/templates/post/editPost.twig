{% extends 'basic_template_2.twig' %}

    {% block content %}

        {% if role == 1 %}
            <h1>Modifier votre post</h1>
            <hr>
            <form method="POST" action="../../Posts/changePost">
                <h4>Titre du post</h4>
                <input type="text" id="title" name="title" value="{{ data.title }}">
                <hr>
                <h4>Ch√¢po</h4>
                <input type="text" id="chapo" name="chapo" value="{{ data.chapo }}">
                <hr>
                <h4>Contenu</h4>
                <textarea id="mytextarea" name="content">{{ data.content }}</textarea>
                <hr>
                <input type="hidden" name="id" value="{{ data.id }}">
                <input type="submit" name="submit" class="btn btn-primary" value="Envoyer">
            </form>
        {% else %}
            <div class="alert alert-info">
                <strong>Merci de vous connecter </strong>
            </div>
        {% endif %}

    {% endblock %}

